<p id="notice"><%= notice %></p>

<p class="tasks_title">
  <%= @todo_list.title %>
</p>

<p class="tasks_description">
  <%= @todo_list.description %>
</p>
<div class="tasks_container">
  <%= render @todo_list.todo_items %>
</div>

  <%= render "todo_items/form" %>

<div class="row options">
  <div class="col-md-3 col-sm-3 "></div>
  <div class="col-md-2 col-sm-2 col-xs-12">
    <div><%= link_to 'Edit', edit_todo_list_path(@todo_list), class: "btn btn-primary btn_option" %></div>
  </div>
  <div class="col-md-2 col-sm-2 col-xs-12">
    <div><%= link_to 'Delete', todo_list_path(@todo_list),  class: "btn btn-primary btn_option", method: :delete, data: { confirm: "Are you sure?"} %></div>
  </div>
  <div class="col-md-2 col-sm-2 col-xs-12">
    <%= link_to 'Back', todo_lists_path, class:"btn btn-primary btn_option" %>
  </div>
  </div>
  <div class="col-md-3 col-sm-3 "></div>
</div>

